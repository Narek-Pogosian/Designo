---
import WebBanner from "@components/design-banners/WebBanner.astro";
import AppLink from "@components/design-links/AppLink.astro";
import DesignLinksContainer from "@components/design-links/DesignLinksContainer.astro";
import GraphicsLink from "@components/design-links/GraphicsLink.astro";
import Card from "@components/card-list/Card.astro";
import CardsList from "@components/card-list/CardsList.astro";
import Layout from "src/Layout.astro";
---

<Layout title="Designo Agency | Web Design">
  <WebBanner />
  <CardsList>
    <Card
      title="Express"
      description="A multi-carrier shipping website for ecommerce businesses"
      img="/assets/web-design/desktop/image-express.jpg"
    />
    <Card
      title="Transfer"
      description="Site for low-cost money transfers and sending money within seconds"
      img="/assets/web-design/desktop/image-transfer.jpg"
    />
    <Card
      title="Photon"
      description="A state-of-the-art music player with high-resolution audio and DSP effects"
      img="/assets/web-design/desktop/image-photon.jpg"
    />
    <Card
      title="Builder"
      description="Connects users with local contractors based on their location"
      img="/assets/web-design/desktop/image-builder.jpg"
    />
    <Card
      title="Blogr"
      description="Blogr is a platform for creating an online blog or publication"
      img="/assets/web-design/desktop/image-blogr.jpg"
    />
    <Card
      title="Camp"
      description="Get expert training in coding, data, design, and digital marketing"
      img="/assets/web-design/desktop/image-camp.jpg"
    />
  </CardsList>
  <DesignLinksContainer>
    <AppLink />
    <GraphicsLink />
  </DesignLinksContainer>
</Layout>
