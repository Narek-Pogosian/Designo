---
import AboutBanner from "@components/about-page/AboutBanner.astro";
import LocationList from "@components/shared/LocationList.astro";
import Layout from "src/Layout.astro";
---

<Layout title="Designo Agency | About">
  <AboutBanner />

  <section class="container-md">
    <div class="about-info-section">
      <div class="world-class-image"></div>
      <div class="text">
        <h2>World-class talent</h2>
        <p>
          We are a crew of strategists, problem-solvers, and technologists.
          Every design is thoughtfully crafted from concept to launch, ensuring
          success in its given market. We are constantly updating our skills in
          a myriad of platforms. <br /><br /> Our team is multi-disciplinary and
          we are not merely interested in form — content and meaning are just as
          important. We give great importance to craftsmanship, service, and prompt
          delivery. Clients have always been impressed with our high-quality outcomes
          that encapsulates their brand’s story and mission.
        </p>
      </div>
    </div>
  </section>

  <LocationList />

  <section class="container-md">
    <div class="about-info-section reversed">
      <div class="real-deal-image"></div>
      <div class="text">
        <h2>World-class talent</h2>
        <p>
          We are a crew of strategists, problem-solvers, and technologists.
          Every design is thoughtfully crafted from concept to launch, ensuring
          success in its given market. We are constantly updating our skills in
          a myriad of platforms. <br /><br /> Our team is multi-disciplinary and
          we are not merely interested in form — content and meaning are just as
          important. We give great importance to craftsmanship, service, and prompt
          delivery. Clients have always been impressed with our high-quality outcomes
          that encapsulates their brand’s story and mission.
        </p>
      </div>
    </div>
  </section>
</Layout>

<style lang="scss">
  @use "@sass/abstracts" as *;

  .about-info-section {
    display: flex;
    flex-direction: column;

    @include md {
      border-radius: $border-radius;
      overflow: hidden;
    }

    @include lg {
      flex-direction: row;

      &.reversed {
        flex-direction: row-reverse;
      }
    }

    .text {
      display: flex;
      flex-direction: column;
      gap: 2rem;
      justify-content: center;
      text-align: center;
      background-color: $card-peach;
      padding-inline: 2rem;
      padding-block: 4rem;

      @include md {
        padding-inline: 4rem;
      }

      @include lg {
        text-align: left;
      }

      h2 {
        color: $peach;
      }
    }
  }

  .world-class-image,
  .real-deal-image {
    background-repeat: no-repeat;
    background-size: cover;
    flex-shrink: 0;
    height: 320px;

    @include lg {
      height: 640px;
      width: 480px;
    }
  }

  .world-class-image {
    background-image: url("/assets/about/mobile/image-world-class-talent.jpg");

    @include md {
      background-image: url("/assets/about/tablet/image-world-class-talent.jpg");
    }

    @include lg {
      background-image: url("/assets/about/desktop/image-world-class-talent.jpg");
    }
  }

  .real-deal-image {
    background-image: url("/assets/about/mobile/image-real-deal.jpg");

    @include md {
      background-image: url("/assets/about/tablet/image-real-deal.jpg");
    }

    @include lg {
      background-image: url("/assets/about/desktop/image-real-deal.jpg");
    }
  }
</style>
