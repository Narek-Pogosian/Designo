---
import Logo from "@components/shared/Logo.astro";
import NavLink from "@components/shared/NavLink.astro";
---

<nav>
  <Logo theme="light" />
  <ul>
    <li>
      <NavLink href="/about">Our Company</NavLink>
    </li>
    <li>
      <NavLink href="/locations">Locations</NavLink>
    </li>
    <li>
      <NavLink href="/contact">Contact</NavLink>
    </li>
  </ul>
</nav>

<style lang="scss">
  @use "@sass/abstracts" as *;

  nav {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;

    text-align: center;
    padding-block: 2rem;
    border-bottom: 1px solid $dark-gray;

    @include md {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  ul {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    list-style: none;

    @include md {
      width: 370px;

      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
