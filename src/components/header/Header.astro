---
import Logo from "../shared/Logo.astro";
import NavLink from "../shared/NavLink.astro";
import MobileMenu from "./MobileMenu.astro";
---

<header>
  <div class="header-content container">
    <Logo />
    <nav>
      <ul>
        <li>
          <NavLink href="/about" theme="black">Our Company</NavLink>
        </li>
        <li>
          <NavLink href="/locations" theme="black">Locations</NavLink>
        </li>
        <li>
          <NavLink href="/contact" theme="black">Contact</NavLink>
        </li>
      </ul>
    </nav>
    <MobileMenu />
  </div>
</header>

<style lang="scss">
  @use "@sass/abstracts" as *;

  header {
    display: flex;
    align-items: center;
    position: sticky;
    top: 0;
    left: 0;
    width: 100%;
    background-color: $white;
    height: $header-height-mobile;
    z-index: 1000;

    @include md {
      position: relative;
      height: $header-height;
    }
  }

  nav {
    display: none;

    @include md {
      display: block;

      ul {
        list-style: none;
        width: 370px;
        display: flex;
        justify-content: space-between;
      }
    }
  }

  .header-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
  }
</style>
