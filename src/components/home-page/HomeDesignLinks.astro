---
import AppLink from "@components/design-links/AppLink.astro";
import HomeWebLink from "@components/design-links/HomeWebLink.astro";
import GraphicsLink from "@components/design-links/GraphicsLink.astro";
---

<section class="container">
  <HomeWebLink />
  <AppLink />
  <GraphicsLink />
</section>

<style lang="scss">
  @use "@sass/abstracts" as *;

  section {
    padding-block: 4rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;

    @include lg {
      display: grid;
      grid-template-columns: 1fr 1fr;
    }
  }

  div {
    display: flex;
    flex-direction: column;
    gap: 2rem;

    @include lg {
      width: 50%;
    }
  }
</style>
