---
import type { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"textarea"> {}

const { ...rest } = Astro.props;
---

<div class="input-wrapper">
  <textarea class="input" {...rest}></textarea>
</div>

<style lang="scss">
  @use "@sass/abstracts" as *;
  textarea {
    resize: none;
  }

  .input-wrapper {
    position: relative;

    &:after {
      content: "";
      position: absolute;
      bottom: -3px;
      left: 0;
      height: 4px;
      width: 100%;
      scale: 0 1;
      background-color: $white;
      transition: scale 300ms;
    }

    &:focus-within:after {
      scale: 1 1;
    }
  }

  .input {
    padding: 0.5rem;
    color: $white;
    width: 100%;
    height: 100%;
    outline: none;
    background-color: transparent;
    border: none;
    border-bottom: 1px solid $light-gray;

    &::placeholder {
      color: $light-gray;
    }
  }
</style>
