---
import { cva, type VariantProps } from "class-variance-authority";
import type { HTMLAttributes } from "astro/types";
import clsx from "clsx";

const navLink = cva("nav-link", {
  variants: {
    theme: {
      white: "white",
      black: "black",
    },
    size: {
      sm: "sm",
      md: "md",
    },
  },
  
  compoundVariants: [{theme: "white", size: "md"}]
});

export interface Props extends HTMLAttributes<"a">, VariantProps<typeof navLink> {
}

const { theme = "white", size = "sm", ...rest } = Astro.props;
---

<a
  class={clsx(navLink({ theme, size }), theme, size)}
  {...rest}
>
  <slot />
</a>

<style lang="scss">
  @use "@sass/abstracts" as *;

  a {
    text-transform: uppercase;
    letter-spacing: 2px;
    position: relative;
    cursor: pointer;

    &::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: -0.25rem;
      height: 3px;
      width: 100%;
      background-color: $peach;

      scale: 0 1;
      transition: scale 250ms;
    }

    &:hover::after {
      scale: 1 1;
    }
  }

  a.sm {
    font-size: 14px;
  }

  a.md {
    font-size: 24px;
  }

  a.white {
    color: $white;
  }

  a.black {
    color: $black;
  }
</style>
