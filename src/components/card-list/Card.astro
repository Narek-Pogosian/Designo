---
export interface Props {
  img: string;
  title: string;
  description: string;
}

const { description, img, title } = Astro.props;
---

<div class="card">
  <div>
    <img src={img} alt={title} />
  </div>
  <div class="card-info">
    <h3>{title}</h3>
    <p>{description}</p>
  </div>
</div>

<style lang="scss">
  @use "@sass/abstracts" as *;

  $card-width: 330px;
  $card-height: 480px;

  .card {
    display: flex;
    flex-direction: column;
    border-radius: $border-radius;
    overflow: hidden;
    height: $card-height;
    width: $card-width;
    cursor: pointer;

    & > div:first-of-type {
      flex: 2;
    }

    & > div:last-of-type {
      flex: 1;
    }

    @include md {
      flex-direction: row;
      width: 100%;
      height: 310px;

      & > div:first-of-type {
        flex: 1 !important;
      }
    }

    @include xl {
      flex-direction: column;
      width: $card-width;
      height: $card-height;
    }

    & > div:first-of-type {
      flex: 2;
    }
  }

  img {
    height: 100%;
    width: 100%;
  }

  .card-info {
    flex-grow: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding-inline: 2rem;
    height: 100%;
    transition: color 200ms, background-color 200ms;
    background-color: $card-peach;

    h3 {
      color: $peach;
      margin-bottom: 1rem;
    }
  }

  .card:hover .card-info {
    background-color: $peach;
    h3,
    p {
      color: $white;
    }
  }
</style>
